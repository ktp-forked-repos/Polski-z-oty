<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.walutypln.GoldFragment">


    <TextView
        android:text="Kurs zÅ‚ota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Data:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/goldNumber_et"
        android:layout_marginTop="62dp"
        android:id="@+id/data_tv"
        android:textSize="18sp" />

    <TextView
        android:text="Kurs:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gRate_tv"
        android:textSize="18sp"
        android:layout_below="@+id/data_tv"
        android:layout_alignEnd="@+id/data_tv"
        android:layout_marginTop="37dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/goldNumber_et"
        android:layout_below="@+id/gRate_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <Button
        android:text="Przelicz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goldMultiply_btn"
        android:layout_below="@+id/goldNumber_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />
</RelativeLayout>
